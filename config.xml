<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.julienmarcou.openweatherapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>OpenWeatherApp</name>
    <description>
        A sample Open Source Weather application.
    </description>
    <author href="http://julien-marcou.fr">
        Julien Marcou
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <plugin name="cordova-plugin-geolocation" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="www/img/logo.png" />
    <platform name="android">
        <icon src="www/img/icon-36x36.png" density="ldpi" />
        <icon src="www/img/icon-48x48.png" density="mdpi" />
        <icon src="www/img/icon-72x72.png" density="hdpi" />
        <icon src="www/img/icon-96x96.png" density="xhdpi" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
